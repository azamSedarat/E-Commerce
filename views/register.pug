<!DOCTYPE html>
<html lang="fa">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="#2962ff">
    <meta name="msapplication-navbutton-color" content="#2962ff">
    <meta name="apple-mobile-web-app-status-bar-style" content="#2962ff">
    <title>YektaKala | login</title>
    link(rel="stylesheet", href="/css/dependencies.css")
    
    <link rel="stylesheet" href="/css/theme.css">
    <link rel="stylesheet" href="/css/custom.css">
</head>

<body>

    <div class="page-wrapper">
        <header class="page-mini-header py-4">
            <div class="d-flex justify-content-center">
                <div class="logo-container">
                    <a href="#" class="logo"><img src="/images/logo-dark.svg" width="120" alt=""></a>
                </div>
            </div>
        </header>
        <main class="page-content page-auth">
            <!-- start of auth-container -->
            <div class="auth-container">
                
                <!-- start of auth-box -->
                <div class="auth-box ui-box">
                    <!-- start of auth-form -->
                    <form  method="post" class="auth-form">
                        <!-- start of form-element -->
                        <div class="form-element-row mb-5">
                            label(for="username")
                            <input type="text" class="form-control" name="username" id="username" placeholder="نام کاربری">
                            label(for="email")
                            <input type="text" class="form-control" name="email" id="email" placeholder="ایمیل">
                            label(for="password")
                            <input type="password" class="form-control" name="password" id="password" placeholder="رمز عبور">
                        </div>
                        <!-- end of form-element -->
                        <!-- start of form-element -->
                        <div class="form-element-row mb-3">
                            <button type="submit" class="btn btn-primary">ثبت نام</button>
                        </div>
                        <!-- end of form-element -->
                        <!-- start of form-element -->
                        <div class="form-element-row">
                            <div>قبول قوانین سایت
                            </div>
                        </div>
                        <!-- end of form-element -->
                    </form>
                    <!-- end of auth-form -->
                </div>
                <!-- end of auth-box -->
            </div>
            <!-- start of auth-container -->
        </main>
        <footer class="page-mini-footer">
            <div class="d-flex justify-content-center py-5">
                <div class="logo-container">
                    <a href="#" class="logo"><img src="/images/logo-dark.svg" width="120" alt=""></a>
                </div>
            </div>
            <div class="copy-right bg-light py-3">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6 mb-md-0 mb-4">
                            <div class="text-muted text-md-start text-center">کلیه حقوق محفوظ است
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="text-muted text-md-end text-center">echo_designer - 2021 © Copyright</div>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>


    <script src="/js/dependencies/jquery-3.6.0.min.js"></script>
    <script src="/js/dependencies/bootstrap.bundle.min.js"></script>
    <script src="/js/dependencies/bootstrap-slider.min.js"></script>
    <script src="/js/dependencies/jquery.countdown.min.js"></script>
    <script src="/js/dependencies/jquery.simple.timer.min.js"></script>
    <script src="/js/dependencies/iziToast.min.js"></script>
    <script src="/js/dependencies/fancybox.umd.js"></script>
    <script src="/js/dependencies/nouislider.min.js"></script>
    <script src="/js/dependencies/wNumb.js"></script>
    <script src="/js/dependencies/remodal.min.js"></script>
    <script src="/js/dependencies/select2.min.js"></script>
    <script src="/js/dependencies/simplebar.min.js"></script>
    <script src="/js/dependencies/swiper-bundle.min.js"></script>
    <script src="/js/dependencies/zoomsl.min.js"></script>
    <script src="/js/theme.js"></script>
    <script src="/js/custom.js"></script>
</body>

</html>